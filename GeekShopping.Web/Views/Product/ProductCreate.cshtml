@model GeekShopping.Web.Models.ProductModel

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="container p-4 border rounded shadow-sm">
    <h2 class="text-primary mb-4">📦 Criar Novo Produto</h2>

    <form asp-action="ProductCreate" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Nome do Produto</label>
                <input asp-for="Name" class="form-control" placeholder="Digite o nome do produto" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Price" class="form-label">Preço</label>
                <input asp-for="Price" class="form-control" placeholder="Ex: 99.90" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Categoria</label>
            <select asp-for="Category" class="form-select">
                <option value="">Selecione uma categoria</option>
                @foreach (var categoria in Enum.GetValues(typeof(GeekShopping.Web.Models.CategoriaProduto)))
                {
                    <option value="@categoria">@categoria</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Descrição</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descreva o produto..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">URL da Imagem</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="https://exemplo.com/imagem.jpg" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">💾 Salvar</button>
            <a asp-action="ProductIndex" class="btn btn-outline-secondary">❌ Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}