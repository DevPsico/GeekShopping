@model IEnumerable<GeekShopping.Web.Models.ProductModel>
@{
    ViewData["Title"] = "Lista de Produtos";
    var categorias = ViewBag.Categorias as List<string> ?? new List<string>();
    var categoriaSelecionada = ViewBag.CategoriaSelecionada as string;
}

<style>
    .dropdown-menu-custom {
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        min-width: 200px;
    }

    .dropdown-toggle-custom {
        font-weight: 600;
        color: #0d6efd;
        background-color: #e9f2ff;
        border: 1px solid #0d6efd;
        padding: 6px 12px;
        border-radius: 0.375rem;
    }

        .dropdown-toggle-custom:hover {
            background-color: #d0e7ff;
            color: #0a58ca;
        }
</style>

<div class="container p-4 border rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h2 class="text-primary mb-0">🛍️ Lista de Produtos</h2>
        <a asp-action="ProductCreate" class="btn btn-outline-primary">
            <i class="fas fa-plus"></i> Criar Novo Produto
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Preço</th>
                    <th scope="col">
                        <div class="dropdown">
                            <button class="dropdown-toggle-custom dropdown-toggle" type="button" id="dropdownCategoria" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-filter me-1"></i> Categoria
                            </button>
                            <ul class="dropdown-menu dropdown-menu-custom" aria-labelledby="dropdownCategoria">
                                <li>
                                    <a class="dropdown-item @(string.IsNullOrEmpty(categoriaSelecionada) ? "active" : "")"
                                       asp-action="ProductIndex" asp-route-categoria="">
                                        Todas
                                    </a>
                                </li>
                                @foreach (var categoria in categorias)
                                {
                                    <li>
                                        <a class="dropdown-item @(categoria == categoriaSelecionada ? "active" : "")"
                                           asp-action="ProductIndex" asp-route-categoria="@categoria">
                                            @categoria
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@String.Format("R$ {0:N2}", item.Price)</td>
                        <td>@item.Category</td>
                        <td class="text-center">
                            <div class="btn-group gap-2" role="group">
                                <a asp-action="ProductEdit" asp-route-id="@item.Id" class="btn btn-outline-primary px-3 py-2">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="ProductDelete" asp-route-id="@item.Id" class="btn btn-outline-danger px-3 py-2">
                                    <i class="fas fa-trash-alt"></i> Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>